{
  "manifest_version": 2,

  "name": "Image Switcher",
  "description": "Change all images in the tab!",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "permissions": ["tabs"],
  "optional_permissions" : ["http://*/*", "https://*/*"],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*/files",
                  "https://github.com/*/*/pull/*/files"
                  ],
      "js": ["github.com.js"]
    }
  ]
}
